{% extends "includes/layout.njk" %}

{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("whoManagesTheTrust.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("whoManagesTheTrust.heading") }}
        </h1>

        <form action="{{ routes.controllers.WhoManagesTheTrustController.onSubmit(mode).url }}" method="post">

          {{ csrf() | safe }}

          <p class="govuk-body">{{messages("whoManagesTheTrust.info")}}</p>

          {{ govukButton({
            text: messages("site.continue")
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
