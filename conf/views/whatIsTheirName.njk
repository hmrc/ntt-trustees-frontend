{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("whatIsTheirName.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            {{ messages("whatIsTheirName.title") }}
        </h1>

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.individual.lead.WhatIsTheirNameController.onSubmit(mode).url }}" method="post">

          {{ csrf() | safe }}

          {{ govukInput({
              label: {
                text: messages('whatIsTheirName.firstName'),
                classes: "govuk-label"
              },
              id: "firstName",
              name: "firstName",
              value: form.firstName.value,
              errorMessage: form.firstName.error
            }) }}

              {{ govukInput({
                label: {
                  text: messages('whatIsTheirName.middleName'),
                  classes: "govuk-label"
                },
                id: "middleName",
                name: "middleName",
                value: form.middleName.value,
                errorMessage: form.middleName.error
              }) }}

              {{ govukInput({
                label: {
                  text: messages('whatIsTheirName.lastName'),
                  classes: "govuk-label"
                },
                id: "lastName",
                name: "lastName",
                value: form.lastName.value,
                errorMessage: form.lastName.error
              }) }}

            {{ govukButton({
              text: messages("site.continue")
            }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
